import random

def word_guessing():
    word_list = ['python', 'software', 'engineering', 'professional']

    while True:  # Outer loop to restart the game
        word = random.choice(word_list)
        blanks = ['_'] * len(word)
        lives = 10

        print("\nNew Word Guessing Game!")
        print("You have", lives, "lives")
        print("The Word has", len(word), "letters" )

        while True:
            print("\nWord:", ' '.join(blanks))
            guess = input("Guess a letter: ").lower()

            if guess in word:
                for i, letter in enumerate(word):
                    if letter == guess:
                        blanks[i] = guess
            else:
                lives -= 1
                print("Wrong guess! Lives left:", lives)

            if '_' not in blanks:
                print("\nðŸŽ‰ Congrats! You guessed the word:", word)
                break

            if lives == 0:
                print("\nðŸ’€ GAME OVER. The word was:", word)
                break

        # Ask if the user wants to play again
        play_again = input("\nDo you want to play again? (y/n): ").lower()
        if play_again != 'y':
            print("Thanks for playing!")
            break

word_guessing()
