class HR:
    def __init__(self,name,age,address):
        self.name = name
        self.age = age
        self.address = address

    def display_personal(self):
        print(f"Personal Details:")
        print(f"Name:{self.name}")
        print(f"Age:{self.age}")
        print(f"Address:{self.address}")

    def mod_age(self,years):
        self.age += years
        print(f"The modified age is:({self.age})")

if __name__ == "__main__":
    name = input("Enter your name:")
    age = int(input("Enter your age:"))
    address = input("Enter your address:")

    info = HR(name,age,address)
    info.display_personal()

    years = int(input(f"Add humber of years to modify your age:"))
    info.mod_age(years)
    info.display_personal()
